    "@types/react": "^18.2.60",
    "@types/react-transition-group": "^4.4.10",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "@typescript-eslint/parser": "^7.1.0",
    "async-validator": "^4.2.5",
    "axios": "^1.6.7",
    "classnames": "^2.5.1",
